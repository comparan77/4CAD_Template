form#frm-asn.needs-validation(novalidate)
  .row
    .col-xl-12.col-lg-12
      .card.shadow.mb-4
        //Card header
        a.d-block.card-header.py-3(href="#cardSelProd" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="cardSelProd")
          h6.m-0.font-weight-bold.text-primary 1.- Selección del producto
        .collapse#cardSelProd.show
          //Card Body        
          .card-body
            .form-group
              select#ddl_entrada.form-control.custom-select(aria-expanded="false" data-live-search="true" data-title="Seleccione un Folio de Entrada" required)
                if lstEnt != undefined
                  each itemE in lstEnt
                    option(value=itemE.Id_entrada) #{itemE.Folio}
            .form-group
              .table-responsive
                table#tbl_prod_ubica.table.table-bordered(width="100%" style="cellspacing:0")
                  thead
                    tr
                      th
                        input#chk_all_prod_ub(type="checkbox") 
                      th Folio
                      th Método
                      th Formato
                      th Cajas
                      th Piezas
                      th Tipo Ref.
                      th Ref.
                      th Lote
                      th Cad.
                  tfoot
                    tr
                      th
                      th#sumSelected 0
                      th
                      th
                      th#sumCajas 0
                      th#sumPiezas 0
                      th
                      th
                      th
                      th
                  tbody
        .card-footer
          .form-group.float-right
            button#add_prodUb.btn.btn-secondary(type="button") Agregar Productos